<h1 class="center">Sales Page</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Buyer</th>
    <th class="center">Price</th>
    <th class="center">Sold at</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= image_tag order.listing.image.url(:thumb) %></td>
      <td><%= order.listing.name %></td>
      <td><%= order.buyer.name_title %></td>
      <td><%= number_to_currency(order.listing.price) %></td>
      <td><%= order.created_at.strftime('%b %d, %Y') %></td>
    </tr>
  <% end %>

</table>
