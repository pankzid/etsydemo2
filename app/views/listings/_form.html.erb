
<div class="well">
  <%= form_for(@listing, html: { class: 'form-horizontal', role: 'form' }) do |f| %>
  <% if @listing.errors.any? %>
  <div id="error_explanation" class="alert alert-red">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

    <ul>
      <% @listing.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, { class: 'form-control', rows: 3 } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>
