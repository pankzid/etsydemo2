<div class="row">
  <div class="col-sm-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.try(:url) %>
    </div>
  </div>
  <div class="col-sm-6">
    <h2><%= @listing.name.titleize %></h2>
    <p><%= @listing.description %></p>
    <h3><%= number_to_currency(@listing.price) %></h3>
    <% unless listing_owner? @listing.user %>
      <%= link_to 'Buy It Now', new_listing_order_path(@listing), class: 'btn btn-primary center', data: { no_turbolink: true } %>
    <% end %>
  </div>
</div>

<% if listing_owner? @listing.user %>
  <%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-link' %> |
<% end %>
<%= link_to 'Back', listings_path, class: 'btn btn-link' %>
